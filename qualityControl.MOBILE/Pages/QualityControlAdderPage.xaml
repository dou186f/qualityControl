<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="qualityControl.MOBILE.Pages.QualityControlAdderPage"
             Title="Add Quality Control Results">

    <VerticalStackLayout Padding="16" Spacing="12">

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />

        <Button Text="Yenile"
                Command="{Binding RefreshCommand}"
                IsEnabled="{Binding IsNotBusy}" />

        <CollectionView ItemsSource="{Binding Items}">
            <CollectionView.EmptyView>
                <Label Text="No tests were found defined for this work order." 
                       HorizontalTextAlignment="Center"
                       Padding="20"/>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="16,0,16,0" Margin="0,6" HasShadow="False" BorderColor="Transparent">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            
                            <HorizontalStackLayout Spacing="8">
                                <RadioButton Content="Suitable"
                                             IsChecked="{Binding IsOk, Mode=TwoWay}" />
                                <RadioButton Content="Not Suitable"
                                             IsChecked="{Binding IsNotOk, Mode=TwoWay}" />
                            </HorizontalStackLayout>
                            
                            <BoxView HeightRequest="1"
                                     HorizontalOptions="Start"
                                     WidthRequest="320"
                                     BackgroundColor="{AppThemeBinding Light=#E5E5EA, Dark=#2C2C2E}" />
                        </VerticalStackLayout>
                        
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Kaydet"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding IsNotBusy}" />
    </VerticalStackLayout>
</ContentPage>
